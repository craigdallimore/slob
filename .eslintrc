{
  "plugins": [
    "react"
  ],
  "env": {
    "browser" : true,
    "node"    : true,
    "es6"     : true,
    "mocha"   : true,
    "jasmine" : true,
    "jest"    : true
  },
  "globals": {
    "jest"               : true,
    "stubRouterContext"  : true,
    "wrapIntlProvider"   : true,
    "Simulate"           : true,
    "renderIntoDocument" : true,
    "findDOMNode"        : true,
    "findWithTag"        : true,
    "findWithClass"      : true,
    "scryWithTag"        : true,
    "scryWithClass"      : true,
    "Modernizr"          : true,
    "mockStore"          : true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "strict"                     : [2, "global"],
    "semi"                       : [2, "always"],
    "react/jsx-no-undef"         : 2,
    "react/jsx-quotes"           : 2,
    "no-catch-shadow"            : 2,
    "no-delete-var"              : 2,
    "no-label-var"               : 2,
    "no-shadow"                  : 2,
    "no-shadow-restricted-names" : 2,
    "no-undef"                   : 2,
    "no-undef-init"              : 2,
    "no-undefined"               : 2,
    "no-unused-vars"             : 2,
    "no-use-before-define"       : 2,
    "no-unused-vars"             : [2, {"vars" : "all", "args" : "after-used"}]
  }
}
